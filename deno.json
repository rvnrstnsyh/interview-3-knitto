{
	"lock": false,
	"nodeModulesDir": "none",
	"deploy": { "project": "knitto-interview", "exclude": ["**/node_modules"], "include": [], "entrypoint": "src\\main.ts" },
	"tasks": {
		"check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
		"cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
		"manifest": "deno task cli manifest $(pwd)",
		"dev": "deno run -A --unstable-kv --watch=src/static/,src/routes/ src/dev.ts",
		"build": "deno run -A --unstable-kv src/dev.ts build",
		"docker:build": "docker build -t knitto-interview .",
		"deploy": "deno run -A --unstable-kv src/dev.ts build && deployctl deploy --prod --project=knitto-interview",
		"preview": "deno run -A --unstable-kv src/main.ts",
		"live": "pm2 start ecosystem.config.sh --name knitto-interview --instances 1",
		"update": "deno run -A -r https://fresh.deno.dev/update ."
	},
	"compilerOptions": { "types": ["./definition.d.ts"], "jsx": "react-jsx", "jsxImportSource": "preact" },
	"lint": {
		"include": ["**/*.ts", "**/*.tsx"],
		"exclude": ["**/_fresh/*", "**/*.hbs"],
		"rules": {
			"tags": ["recommended", "fresh"],
			"include": ["no-unused-vars", "no-var-requires", "no-explicit-any", "no-extraneous-class", "no-non-null-assertion", "ban-untagged-todo"],
			"exclude": []
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 155,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["**/*.ts", "**/*.tsx"],
		"exclude": ["**/_fresh/*", "**/*.hbs"]
	},
	"exclude": ["**/_fresh/*"],
	"imports": {
		"$fresh/": "https://deno.land/x/fresh@1.7.3/",
		"$std/": "https://deno.land/std@0.224.0/",
		"@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
		"@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
		"bcrypt": "https://deno.land/x/bcrypt@v0.4.1/mod.ts",
		"djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
		"firebase/app": "npm:/firebase@10.14.1/app",
		"firebase/auth": "npm:/firebase@10.14.1/auth",
		"firebase/analytics": "npm:/firebase@10.14.1/analytics",
		"mysql": "https://deno.land/x/mysql@v2.12.1/mod.ts",
		"preact": "https://esm.sh/preact@10.22.0",
		"preact/": "https://esm.sh/preact@10.22.0/",
		"tailwindcss": "npm:/tailwindcss@3.4.14",
		"tailwindcss/plugin": "npm:/tailwindcss@3.4.14/plugin.js",
		"ui7": "https://deno.land/x/ui7@v0.2.3/mod.ts",
		"ulid": "https://deno.land/x/ulid@v0.3.0/mod.ts",
		"zod": "https://deno.land/x/zod@v3.23.8/mod.ts"
	}
}
